{
  "compilerOptions": {
    "target": "es6", // or higher
    "module": "commonjs", // or whatever module system you're using
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, // Important for TypeORM
    "strict": true, // Optional, but recommended
    "skipLibCheck": true, // Optional, can help with type-checking issues
    "esModuleInterop": true, // Helps with module compatibility,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
